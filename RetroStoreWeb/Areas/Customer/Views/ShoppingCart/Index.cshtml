@using RetroStore.Models.ViewModels;
@model List<CartItemView>

@{
    ViewData["Title"] = "Shopping Cart";
}

<h2>Shopping Cart</h2>

@if (Model.Count == 0) {
    <p>Your shopping cart is empty.</p>
}
else {
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Product.Price.ToString("C")</td>
                    <td>@item.Count</td>
                    <td>
                        <form method="post" asp-action="Remove" asp-route-productId="@item.Product.Id">
                            <button type="submit">Remove</button>
                        </form>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
