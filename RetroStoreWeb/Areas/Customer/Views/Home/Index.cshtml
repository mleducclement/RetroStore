@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    @foreach (var product in Model) {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <a asp-action="Details" asp-route-id="@product.Id">
                            <img src="@product.ImageUrl" class="card-img-top rounded" style="max-width: 100%; height:auto;"/>
                        </a>

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@product.Name</p>
                                <p class="card-title text-info">@product.Genre.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title">List Price: <span style="text-decoration: line-through; font-weight: bold;">$@product.ListPrice</span></p>
                            </div>
                            <div class="pl-1">
                                <p class="card-title text-danger">Price: <span style="font-weight: bold">$@product.Price</span></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a class="btn btn-primary form-control mt-2" asp-action="Details" asp-route-id="@product.Id">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
