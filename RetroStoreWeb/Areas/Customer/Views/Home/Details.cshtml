@using RetroStore.Models.ViewModels;
@model ShoppingCartView
@{
    ViewData["Title"] = Model.Product.Name;
}

<form method="post">
    <div class="card container my-4">
        <div class="card-header bg-primary text-light ml-0  row ">
            <div class="col-12 col-md-6">
                <h1>@Model.Product.Name</h1>
            </div>
            <div class="col-12 col-md-6 text-end d-flex align-items-center justify-content-end">
                <div class="badge bg-info" style="height:30px;">@Model.Product.Platform.ToString()</div>
                <div class="badge bg-warning" style="height:30px;">@Model.Product.Genre.Name</div>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2">
                <div class="row">
                    <div class="col-8 col-lg-8">

                        <div class="row pl-2">
                            <h5 class="text-muted">Release Date : @Model.Product.ReleaseDate.ToString("MMMM yyyy")</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted pb-2">List Price: <span style="text-decoration: line-through;">$@Model.Product.ListPrice</span></h5>
                        </div>
                        <div class="row text-center pl-2">
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>Quantity</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>1-50</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>51-100</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary border-bottom">
                                <div>100+</div>
                            </div>
                        </div>
                        <div class="row text-center pl-2" style="color:maroon; font-weight:bold">
                            <div class="p-1 col-2 bg-secondary">
                                <div>Price</div>
                            </div>
                            <div class="p-1 col-2 bg-secondary">
                                <div>$@Model.Product.Price</div>
                            </div>
                        </div>
                        <div class="row pl-2">
                            <p class="text-secondary">@Model.Product.Description</p>
                        </div>
                        <div class="row pl-2">
                            <div class="col-2 text-primary"><h4>Count</h4></div>
                            <div class="col-10"><input class="form-control" asp-for="Count" /></div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-3 offset-lg-1 text-center">
                        <img src="@Model.Product.ImageUrl" class="rounded" style="width: 100%;" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pb-1">
                    <a class="btn btn-success form-control d-flex align-items-center justify-content-center" style="height:50px;" asp-controller="Home" asp-action="Index">Back to List</a>
                </div>
                <div class="col-12 col-md-6 pb-1">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control" style="height:50px;">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>



