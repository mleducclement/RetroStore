@using Microsoft.AspNetCore.Identity;
@model IdentityRole
@{
    ViewData["Title"] = "Delete Role";
}

<h2>Delete Role: @Model.Name</h2>

<p>Are you sure you want to delete this role?</p>

<form asp-controller="AdminPanel" asp-action="DeleteRoleConfirmed" method="post">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" name="roleId" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">Delete Role</button>
    <a asp-controller="AdminPanel" asp-action="ListRoles" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}